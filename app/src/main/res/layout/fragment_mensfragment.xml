<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".mensfragment">


    <ImageView
        android:id="@+id/image1234"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher_background" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:cardCornerRadius="40dp"
        android:layout_marginTop="280dp">

        <TextView
            android:id="@+id/name1234"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#0B12A1"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="name"/>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_marginTop="80dp"
            app:cardCornerRadius="30dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="#1A237E"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/rating1234"
                android:layout_width="60dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/white"
                android:layout_height="40dp"
                android:textSize="17dp"
                android:text="rating"/>

            <TextView
                android:layout_width="60dp"
                android:textAlignment="center"
                android:layout_marginTop="3dp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:layout_height="40dp"
                android:textSize="20dp"
                android:text="â˜†"/>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/ratingg1234"
            android:layout_width="match_parent"
            android:layout_marginRight="40dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="100dp"
            android:layout_height="40dp"
            android:textSize="17dp"
            android:text="rating2"/>

        <TextView
            android:id="@+id/specialprice1234"
            android:layout_width="match_parent"
            android:layout_marginTop="135dp"
            android:textSize="20dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#1A237E"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="Special price"
            />

        <TextView
            android:id="@+id/price1234"
            android:layout_width="100dp"
            android:layout_marginTop="160dp"
            android:textSize="35dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="price"
            />

        <TextView

            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="180dp"
            android:text="MRP :"
            android:textAlignment="center"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/mrp1234"
            android:layout_width="100dp"
            android:layout_marginTop="181dp"
            android:textSize="17dp"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="mrp"
            />


        <TextView
            android:layout_width="100dp"
            android:layout_marginTop="179dp"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="-----------"
            />

        <TextView
            android:id="@+id/savings1234"
            android:layout_width="100dp"
            android:layout_marginTop="182dp"
            android:textSize="17dp"
            android:layout_marginLeft="230dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="savings"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_marginTop="180dp"
            android:textSize="20dp"
            android:layout_marginLeft="230dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="(            )"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_marginTop="220dp"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Quantity"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="260dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addtocartbtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#14BDDC"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:text="Add To Cart"></androidx.appcompat.widget.AppCompatButton>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="320dp"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buynowbtn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#14BDDC"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:text="BUY NOW"></androidx.appcompat.widget.AppCompatButton>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="380dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginRight="20dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Description:"
                />

            <TextView
                android:id="@+id/description1234"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_height="wrap_content"
                android:text="description"
                />

        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</FrameLayout>